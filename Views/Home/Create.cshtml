@using MyLibraryWebApp.Models
@model MyLibraryWebApp.ViewModels.BookEditModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Create</h1>

<form method="post">

    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        
    </div>

    <div>
        <label asp-for="Genre"></label>
        <select name="Genres">
            @foreach (var item in Model.GenreList)
            {
                <option value="@item.GenreName">@item.GenreName</option>
            }
        </select>
        <span asp-validation-for="Genre"></span>
    </div>

    <input type="submit" name="save" value="save" />

</form>